# Set default charset
AddDefaultCharset "utf-8"

# ðŸ”’ Prevent directory listing
Options -Indexes

# ðŸ”’ Deny access to hidden files like .env, .htaccess, etc.
<FilesMatch "^\.">
  Order allow,deny
  Deny from all
</FilesMatch>

# âœ… Enable URL rewriting
RewriteEngine On

# Set the base to your project folder
RewriteBase /website/

# ðŸš« Skip rewriting if file or directory exists
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# âœ… Pretty URLs without .php extensions
RewriteRule ^([^/\.]+)$ $1.php [L,QSA]

# âœ… Custom rewrites
# /profil/hamza â†’ profile.php?id=hamza
RewriteRule ^profil/([a-zA-Z0-9_-]+)$ profile.php?id=$1 [L,QSA]

# /categorie â†’ categorie.php
RewriteRule ^categorie$ categorie.php [L,QSA]

# /categorie/5 â†’ sujet.php?id=5
RewriteRule ^categorie/([0-9]+)$ sujet.php?id=$1 [L,QSA]

# /categorie/5/10 â†’ sujet.php?id=5&sujet=10
RewriteRule ^categorie/([0-9]+)/([0-9]+)$ sujet.php?id=$1&sujet=$2 [L,QSA]
